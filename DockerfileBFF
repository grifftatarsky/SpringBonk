FROM maven:3.9.9-eclipse-temurin-23-alpine AS build

WORKDIR /app

COPY pom.xml /tmp/pom.xml
RUN mvn -f /tmp/pom.xml install -N

COPY ./spring-bff/pom.xml ./pom.xml
COPY ./spring-bff/src ./src

RUN mvn clean package -DskipTests

FROM eclipse-temurin:23-jre

RUN groupadd -r bonk-docker && useradd -r -g bonk-docker veto

WORKDIR /app

COPY --from=build /app/target/*.jar /app/runner.jar

COPY ./certs/localhost.crt /tmp/localhost.crt
RUN keytool -importcert -trustcacerts -alias localcert -file /tmp/localhost.crt -keystore $JAVA_HOME/lib/security/cacerts -storepass changeit -noprompt

RUN chown -R veto:bonk-docker /app

EXPOSE 7081

USER veto

ENTRYPOINT ["java", "-jar", "/app/runner.jar"]